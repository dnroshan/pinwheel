<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="PwWindow" parent="AdwApplicationWindow">
    <property name="title" translatable="yes">Pinwheel</property>
    <property name="default-width">1000</property>
    <property name="default-height">600</property>
    <property name="content">
      <object class="AdwOverlaySplitView">
        <property name="sidebar">
          <object class="AdwToolbarView">
            <child type="top">
              <object class="AdwHeaderBar">
                <child type="end">
                  <object class="GtkMenuButton">
                    <property name="tooltip-text">Main Menu</property>
                    <property name="icon_name">open-menu-symbolic</property>
                    <property name="menu-model">primary_menu</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </property>
        <property name="content">
          <object class="AdwToolbarView">
            <child type="top">
              <object class="AdwHeaderBar">
                <property name="title-widget">
                  <object class="AdwToggleGroup">
                    <child>
                      <object class="AdwToggle">
                        <property name="icon-name">selection-tool-symbolic</property>
                        <property name="tooltip">Pointer Tool</property>
                        <property name="name">pointer-tool</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwToggle">
                        <property name="icon-name">line-tool-symbolic</property>
                        <property name="tooltip">Line Tool</property>
                        <property name="name">line-tool</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwToggle">
                        <property name="icon-name">rectangle-tool-symbolic</property>
                        <property name="tooltip">Rectangle Tool</property>
                        <property name="name">rectangle-tool</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwToggle">
                        <property name="icon-name">polygon-tool-symbolic</property>
                        <property name="tooltip">Polygon Tool</property>
                        <property name="name">polygon-tool</property>
                      </object>
                    </child>
                    <child>
                      <object class="AdwToggle">
                        <property name="icon-name">pen-tool-symbolic</property>
                        <property name="tooltip">Pen Tool</property>
                        <property name="name">pen-tool</property>
                      </object>
                    </child>
                  </object>
                </property>
              </object>
            </child>
          </object>
        </property>
      </object>
    </property>
  </template>
  <menu id="primary_menu">
    <section>
      <item>
        <attribute name="label" translatable="yes">_Preferences</attribute>
        <attribute name="action">app.preferences</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_Keyboard Shortcuts</attribute>
        <attribute name="action">win.show-help-overlay</attribute>
      </item>
      <item>
        <attribute name="label" translatable="yes">_About Pinwheel</attribute>
        <attribute name="action">app.about</attribute>
      </item>
    </section>
  </menu>
</interface>
